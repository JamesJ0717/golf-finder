{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "sourceRoot": "api",
    "outDir": "server",
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "api/**/*"
  ]
}
